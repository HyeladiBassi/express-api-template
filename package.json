{
  "name": "api-template",
  "version": "1.0.0",
  "description": "Sample boilerplate for express api with firebase",
  "main": "build",
  "scripts": {
    "test": "mocha",
    "dev": "cross-env NODE_ENV=development nodemon -w src --exec \"babel-node src --presets=@babel/preset-env\"",
    "build": "rimraf build && cross-env NODE_ENV=production babel src -s -D -d build --presets=@babel/preset-env",
    "start": "pm2 start build -n sample-server",
    "docker:build": "docker build -t sample/server .",
    "docker:run": "docker run -d --rm -p 5000:5000 --name sample_server_standalone sample/server",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src"
  },
  "keywords": [],
  "author": "Hyeladi Bassi",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime-corejs2": "^7.17.2",
    "axios": "^0.21.4",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^14.1.0",
    "express": "^4.17.2",
    "express-rate-limit": "^6.1.0",
    "firebase-admin": "^10.0.2",
    "helmet": "^5.0.1",
    "http-status": "^1.5.0",
    "i18next": "^21.6.14",
    "i18next-fs-backend": "^1.1.4",
    "i18next-http-middleware": "^3.2.0",
    "joi": "^17.5.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^9.2.1",
    "morgan": "^1.10.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "pm2": "^5.1.2",
    "uuid": "^3.4.0",
    "winston": "^3.4.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2"
  }
}
